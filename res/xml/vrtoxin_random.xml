<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="f_lte"
            android:title="@string/fourg_over_lte"
            android:summary="@string/fourg_over_lte_summary" />

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="show_threeg"
            android:title="@string/show_threeg_title"
             android:summary="@string/show_threeg_summary"
            android:defaultValue="false" />

    <!-- Alarm Switch -->
    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="show_alarm_icon"
            android:title="@string/alarm_indicator"
            android:summary="@string/alarm_indicator_summary"
			android:defaultValue="true" />

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:summary="@string/status_bar_brightness_control_summary"
            android:title="@string/status_bar_brightness_control_title" />

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="disable_fc_notifications"
            android:title="@string/disable_fc_notifications_title"
            android:summary="@string/disable_fc_notifications_summary"
            android:defaultValue="false" />

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:summary="@string/double_tap_to_sleep_summary"
            android:defaultValue="false" />

    <!-- Headset icon switch -->
    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="show_headset_icon"
            android:title="@string/show_headset_icon_title"
            android:summary="@string/show_headset_icon_summary"
            android:defaultValue="true" />

    <com.android.settings.vrtoxin.SystemSettingSwitchPreference
            android:key="show_volume_icon"
            android:title="@string/show_volume_icon_title"
            android:summary="@string/show_volume_icon_summary"
            android:defaultValue="true" />

    <!-- Various shit -->
    <PreferenceScreen
        android:key="various_shit"
        android:title="@string/various_shit_title"
        android:fragment="com.android.settings.vrtoxin.VariousShit" />

</PreferenceScreen>
