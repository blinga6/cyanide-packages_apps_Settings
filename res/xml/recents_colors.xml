<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/recents_panel_colors">

    <PreferenceCategory
        android:key="cards_colors"
        android:title="@string/recents_cards_colors_title">

        <ListPreference
            android:key="recents_app_icon_color_mode"
            android:title="@string/notification_app_icon_color_mode_title"
            android:entries="@array/notification_icons_color_mode_entries"
            android:entryValues="@array/notification_color_mode_values" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_app_icon_color"
            android:title="@string/app_icon_color_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_bg_color"
            android:title="@string/background_title"
            android:defaultValue="0xff000000" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_dark_mode_bg_color"
            android:title="@string/background_dark_mode_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_icon_color"
            android:title="@string/icons_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_dark_mode_icon_color"
            android:title="@string/icons_dark_mode_title"
            android:defaultValue="0xff000000" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_ripple_color"
            android:title="@string/ripple_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_dark_mode_ripple_color"
            android:title="@string/ripple_dark_mode_title"
            android:defaultValue="0x7a000000" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_text_color"
            android:title="@string/text_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_dark_mode_text_color"
            android:title="@string/text_dark_mode_title"
            android:defaultValue="0xff000000" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="recents_panel"
            android:title="@string/recents_clear_all_options_title">

        <SwitchPreference
            android:key="recents_clear_all_use_icon_color"
            android:title="@string/android_recents_clear_all_use_icon_color_title"
            android:summary="@string/android_recents_clear_all_use_icon_color_summary" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recent_apps_clear_all_bg_color"
            android:title="@string/background_title"
            android:defaultValue="0xff1976D2" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recent_apps_clear_all_icon_color"
            android:title="@string/icon_title"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="immersive_recents_options"
        android:title="@string/immersive_recents_options_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_full_screen_clock_color"
            android:title="@string/recents_full_screen_clock_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="recents_full_screen_date_color"
            android:title="@string/recents_full_screen_date_color"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="memory_bar"
        android:title="@string/memory_bar_options_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="memory_bar_color"
            android:title="@string/membar_bar_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="mem_text_color"
            android:title="@string/membar_text_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="memory_bar_used_color"
            android:title="@string/membar_bar_used_color"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>

</PreferenceScreen>
